{% if item.children is defined %}
  <li class='relative flex flex-col gap-[10px]'>
    <button class='flex flex-row gap-[7px] items-center justify-between w-full font-normal text-lg leading-[25px] text-gray-900 xl:w-auto xl:font-semibold xl:text-[16px] xl:leading-[19px]'>
      {{item.text}}
      <span class='arrow-down-icon'></span>
    </button>
    <ul class='flex-col hidden xl:fixed xl:bg-white xl:rounded-b-md xl:shadow-nav-menu xl:pt-0'> <!-- Active on clink -->
      {% for child in item.children %}
        <li class='p-[10px] font-normal text-[18px]
        leading-[25px] text-blue-700 border-l-[1px] border-l-blue-300
        xl:border-none xl:text-[16px] xl:leading-[18px] xl:text-gray-900'>
          <a href={{child.link}}>{{child.text}}</a>
        </li>
      {% endfor %}
    </ul>
  </li>
{% else %}
  <li class=''>
    {% if item.link is defined and item.link %}
      <a href={{item.link}} class='font-normal text-[18px] leading-[140%] text-gray-900 xl:font-semibold xl:text-[16px] xl:leading-[19px]'>
        {{item.text}}
      </a>
    {% else %}
      <span class='font-normal text-[18px] leading-[140%] text-gray-900 xl:font-semibold xl:text-[16px] xl:leading-[19px]'>
        {{item.text}}
      </span>
    {% endif %}
  </li>
{% endif %}
