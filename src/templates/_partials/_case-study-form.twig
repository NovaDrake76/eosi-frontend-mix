<div class='bg-white px-[15px] py-[30px] md:px-[42px] rounded-md lg:w-[calc(50%-15px)] mb-[96px]'>
  <form method="post" action='' class="flex flex-col gap-6"> <!-- set action -->
    <div>
      <h3 class="font-bold text-2xl lg:text-[32px] lg:leading-[42px] text-gray-900 text-center">
        Request Case Study
      </h3>
    </div>
    {% for field in [
      {
        type: 'text',
        name: 'name',
        label: 'Name',
        placeholder: 'Your Name',
        value: 'Joe Smith',
        required: true
      },
      {
        type: 'tel',
        name: 'phone',
        label: 'Phone',
        placeholder: '555-444-3333',
        value: '555-444-3333',
        required: true
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
        placeholder: 'your@email.com',
        value: 'info@mail.com',
        required: true
      },
      {
        type: 'text',
        name: 'organization',
        label: 'Organization',
        placeholder: 'Acme, Inc.',
        value: 'Acme, Inc.',
        required: true
      },
      {
        type: 'text-area',
        name: 'message',
        label: 'Message',
        placeholder: 'Your Message',
        value: 'Your Message',
        required: false
      }
    ] %}
      <label for={{ field.name }} class="block">
        {% if field.type != 'text-area' %}
          <span class="text-base leading-[19px] lg:text-lg font-semibold">{{ field.label }}</span>
          <input
            type="{{ field.type }}"
            name="{{ field.name }}"
            id="{{ field.name }}"
            value="{{ field.value }}"
            {{ field.required ? 'required' : '' }}
            {{ 
              field.placeholder is defined and field.placeholder is not empty
              ? 'placeholder="' ~ field.placeholder ~ '"'
              : ''
            }}
            class="block w-full p-[9px] border border-gray-300 rounded-md 
            selection:bg-gray-300 selection:bg-opacity-50 focus:border-gray-300 
            focus:ring focus:ring-gray-300 focus:ring-opacity-50"/>
          {% else %}
            <span class="text-base leading-[19px] lg:text-lg font-semibold">{{ field.label }}</span>
            <textarea 
            name="{{ field.name }}"
            id="{{ field.name }}"
            rows='4'
            {{ field.required ? 'required' : '' }}
            {{ 
              field.placeholder is defined and field.placeholder is not empty
              ? 'placeholder="' ~ field.placeholder ~ '"'
              : ''
            }}
            class="block w-full p-[9px] border border-gray-300 rounded-md 
            selection:bg-gray-300 selection:bg-opacity-50 focus:border-gray-300 
            focus:ring focus:ring-gray-300 focus:ring-opacity-50">{{ field.value }}</textarea>
        {% endif %}
      </label>
    {% endfor %}
    <div class='text-center'>
      <button class="btn-solid w-full lg:w-auto"
        type="submit">
          Request Case Study
      </button> 
    </div>
  </form>
</div>