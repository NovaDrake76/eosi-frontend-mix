<footer id="site-footer">
  <div class="bg-blue-900">
    <div class="text-white flex flex-col gap-[60px] p-[30px] mx-auto max-w-screen-desktop">
      <div>
        {% include '_partials/_logo_white.svg.twig' %}
      </div>

      <div class="flex flex-col gap-[30px] lg:gap-y-[60px] lg:flex-row lg:flex-wrap">
        <div class="flex-1">
          <div class="flex flex-col gap-8 lg:flex-row">
            {% for n in [
              {
                title: 'Resources',
                items: [
                  { content: 'SDS & Technical Documents' },
                  { content: 'Case Studies' },
                  { content: 'FAQS' }
                ]
              },
              {
                title: 'About Us',
                items: [
                  { content: 'Our Company' },
                  { content: 'News & Press' },
                  { content: 'Careers' }
                ]
              },
              {
                title: 'Contact',
                items: [
                  { content: 'Message Us', link: '#' },
                  { content: 'Case Studies', link: '#' },
                  { content: 'FAQS', link: '#' }
                ]
              }
            ] %}
              <div class="flex-1 divide-y-2 divide-blue-700">
                <div class="h4">
                  {{ n.title }}
                </div>
                <div class="flex flex-col mt-2">
                  <a class="pt-4" href="{{ n.items[0].link }}">
                    {{ n.items[0].content }}
                  </a>
                  <a class="pt-4" href="{{ n.items[1].link }}">
                    {{ n.items[1].content }}
                  </a>
                  <a class="pt-4" href="{{ n.items[2].link }}">
                    {{ n.items[2].content }}
                  </a>
                </div>
              </div>
            {% endfor %}
          </div>
        </div>

        <div class="lg:w-full lg:order-last">
          <div class="flex flex-col gap-3 lg:flex-row">
            {% for c in [
              { content: 'Privacy Policy' },
              { content: 'Accessibility Statement' },
              { content: 'Website by Dative' }
            ] %}
              <a href="#" class="text-sm text-blue-300">{{ c.content }}</a>
            {% endfor %}
          </div>
        </div>

        <div>
          <div class="flex flex-col items-center mt-[50px] lg:mt-auto">
            <img src="/img/axius_logo.png" alt="axius" class="max-w-[276px]" />
            <div class="mt-3 text-sm">
              <span>
                An <a href="#" class="text-blue-300">Axius Water</a> Company
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>
