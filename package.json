{
  "name": "dative-frontend-mix",
  "version": "1.0.0",
  "description": "Dative Front-End Starter Tool",
  "scripts": {
    "clean": "rimraf public",
    "dev:mix": "cross-env NODE_ENV=development npx mix watch",
    "dev": "npm-run-all clean --parallel dev:*",
    "build:mix": "cross-env NODE_ENV=production npx mix --production",
    "build": "npm-run-all clean build:*",
    "lint": "npm run lint:ts && npm run lint:js && npm run lint:css",
    "lint:ts": "tsc --noEmit",
    "lint:js": "eslint './src/js/*.{js,ts}' --fix",
    "lint:css": "stylelint './src/css/*.{css}' --fix"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "lazysizes": "^5.3.2"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.5.2",
    "@tailwindcss/typography": "^0.5.2",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "@webrgp/laravel-mix-twig": "^1.0.5",
    "autoprefixer": "10.4.5",
    "browser-sync": "^2.27.10",
    "browser-sync-webpack-plugin": "^2.3.0",
    "copy-webpack-plugin": "^10.2.4",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "laravel-mix": "^6.0.49",
    "laravel-mix-criticalcss": "^1.0.2",
    "laravel-mix-imagemin": "^1.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "postcss-import": "^14.1.0",
    "rimraf": "^3.0.2",
    "stylelint": "^14.0.0",
    "stylelint-config-recommended": "^8.0.0",
    "tailwindcss": "^3.1.2",
    "ts-loader": "^9.3.0",
    "typescript": "^4.7.3"
  }
}
